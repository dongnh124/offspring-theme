<!-- ingredient-pants.liquid -->
<div class="{% if section.settings.fullwidth %}container-fluid{% else %}container{% endif %}">
  <div class="section-block">
    {%- include 'pattern-heading' -%}
    <div class="services-wrapper">
      <div class="row justify-content-center" id="{{ section.id }}" >
        {%- for block in section.blocks -%}
        <div class="col-12 col-md-6 col-lg-3">
          <div class="media pat-service service-2 text-center">
            <div class="media-body">
              <div class="mb-4">
                <img class="lazyload" src="{% include 'srcBlank' %}" data-src="{{ block.settings.image | img_url: '500x' }}" />
              </div>
              <h5 class="mt-0 mb-2">{{ block.settings.title }}</h5>
              {{ block.settings.des }}
            </div>
          </div>
        </div>
        {%- endfor -%}
      </div>
    </div>
    {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>

<style>
  .pat-service h5{
      font-weight: 600;
      }
  .pat-service h5>span{
    color:var(--g-main);
      }
  
  @media (min-width:992px){
    .services-wrapper .slick-slider{
      -webkit-touch-callout: text;
      -webkit-user-select: text;
      -khtml-user-select: text;
      -moz-user-select: text;
      -ms-user-select: text;
      user-select: text;
    }
  }
  
  #shopify-section-service-3 svg{
    color:white;
  }
  
  #shopify-section-service-3 .st0{
    fill: #a5d5e8;
  }

</style>

{% schema %}
{
  "name": "Ingredients",
  "class": "index-section mb-0 py-5 ss-service",
  "max_blocks": 4,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Service"
    },
    {
      "type": "textarea",
      "id": "des",
      "default": "Service description",
      "label": "HTML / Description"
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Full width",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title",
          "default": "Ingredient heading"
        },
        {
          "type": "textarea",
          "id": "des",
          "label": "HTML / Description",
          "default": "Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin. Cras purus odio, vestibulum in vulputate at, tempus viverra turpis."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}