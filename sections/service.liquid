<!-- service.liquid -->
<div class="{% if section.settings.fullwidth %}container-fluid{% else %}container{% endif %}">
  <div class="section-block">
    {%- include 'pattern-heading' -%}
    <div class="services-wrapper dots-negative">
      <div class="services-slider row" id="service-list-{{ section.id }}"
           data-rows="{{section.settings.rows}}"
           data-slidesToShow="{{section.blocks.size}}"
           data-slidestoscroll="{{section.blocks.size}}"
           data-arrows="{{ section.settings.arrows }}"
           data-dots="{{ section.settings.dots }}" 
           data-draggable="{{ section.settings.draggable }}" 
           data-infinite="{{ section.settings.infinite }}" 
           data-section-id="{{ section.id }}" 
           data-section-type="slickCarousels">
        {%- for block in section.blocks -%}
        <div class="col services-item carousel__slide-wrapper--{{block.id}}" {{ block.shopify_attributes }}>
          {%- assign pat-service-icon = block.settings.icon | default:'[Icon]' -%}
          {%- assign pat-service-title = block.settings.title -%}
          {%- assign pat-service-des = block.settings.des -%}
          {%- include 'pattern-service' with section.settings.layout  -%}
        </div>
        {%- endfor -%}
      </div>
    </div>

    {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
  
  {% if section.settings.btn_1 != blank %} 
  <div class="text-center mt-4">
    <a href="{{ section.settings.btn_url_1 | default:'/' }}" class="btn btn-theme m-2 px-4">{{ section.settings.btn_1 }}</a>
  </div>
  {% endif %}
</div>

<style>
  .pat-service h5{
      font-weight: 600;
      }
  .pat-service h5>span{
    color:var(--g-main);
      }
  
  @media (min-width:992px){
    .services-wrapper .slick-slider{
      -webkit-touch-callout: text;
      -webkit-user-select: text;
      -khtml-user-select: text;
      -moz-user-select: text;
      -ms-user-select: text;
      user-select: text;
    }
  }
  
  #shopify-section-1599211894464 .section-block{
  	background:transparent;
  }
  
  #shopify-section-1599211894464{
    background: #f0f8f6;
    margin-bottom: 60px !important;
  }
  
  @media (max-width:767px){
    #shopify-section-1599211894464 .btn{
      width: 100%;
      margin: 15px 0 0 !important;
    }
  }
  
  #shopify-section-1605512111a0bc10fa .st0{fill:#8AD5C5;}
  #shopify-section-1605512111a0bc10fa .st1{fill:#FFFFFF;}
</style>

