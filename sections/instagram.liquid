<!-- instagram.liquid -->
<div class="{% if section.settings.fullwidth %}container-fluid px-0{% else %}container{% endif %}">
  <div class="section-block">
    
    {%- if section.settings.title != blank -%}
    <h3 class="section-title section-title-1 text-center mb-4">
      {% include 'icon-instagram' %}<span class="ml-2">{{ section.settings.title }}</span>
    </h3>
    {%- endif -%}
    {%- if section.settings.des != blank -%}
    <p class="section-des section-des-1 text-center px-3 mb-3">
      {{ section.settings.des }}
    </p>
    {%- endif -%}
    <div class="row">
      <div class="col-12 px-0 d-flex flex-column">
        <div class="my-auto">
          <div class="instagram row dots-negative" id="Instagram-{{ section.id }}"
               data-style="{{section.settings.style}}"
               data-accesstoken="{{section.settings.accesstoken}}"
               data-limit="{{ section.settings.limit }}" 
               data-slidesToShow="{{section.settings.show}}"
               data-arrows="{{ section.settings.arrows }}"
               data-dots="{{ section.settings.dots }}" 
               data-draggable="{{ section.settings.draggable }}" 
               data-infinite="{{ section.settings.infinite }}"
               data-section-id="{{ section.id }}" 
               data-section-type="instagrams">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
.instagram .instagram-item {
  position: relative;
  display: block
}

.instagram .instagram-item:hover:after {
  opacity: 1
}

.instagram .instagram-item:after {
  opacity: 0;
  transition: all ease .45s;
  content: "";
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-repeat: no-repeat;
  background-size: 30px;
  background-position: center;
  background-image: url("data:image/png;base64,")
}
  
  .instagram-item img{
    height:150px;
    width: 100%;
    object-fit: cover;
  }

  @media (min-width:1200px){
    .instagram-item img{
      height:300px;
    }
  }
</style>

