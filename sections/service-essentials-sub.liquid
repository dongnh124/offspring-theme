<!-- service-essentials-sub.liquid -->
<div class="{% if section.settings.fullwidth %}container-fluid{% else %}container{% endif %}">
  <div class="section-block">
    {%- include 'pattern-heading' -%}
    <div class="services-wrapper dots-negative pt-3">
      <div class="services-slider row" id="service-list-{{ section.id }}"
           data-rows="{{section.settings.rows}}"
           data-slidesToShow="{{section.blocks.size}}"
           data-slidestoscroll="{{section.blocks.size}}"
           data-arrows="{{ section.settings.arrows }}"
           data-dots="{{ section.settings.dots }}" 
           data-draggable="{{ section.settings.draggable }}" 
           data-infinite="{{ section.settings.infinite }}" 
           data-section-id="{{ section.id }}" 
           data-section-type="slickCarousels">
        {%- for block in section.blocks -%}
        <div class="col services-item carousel__slide-wrapper--{{block.id}}" {{ block.shopify_attributes }}>
          {%- assign pat-service-icon = block.settings.icon | default:'[Icon]' -%}
          {%- assign pat-service-title = block.settings.title -%}
          {%- assign pat-service-des = block.settings.des -%}
          {%- include 'pattern-service' with section.settings.layout  -%}
        </div>
        {%- endfor -%}
      </div>
    </div>
    {%- if section.blocks.size == 0 -%}
    {%- include 'no-blocks' -%}
    {%- endif -%}
  </div>
</div>

<style>
  .pat-service h5{
      font-weight: 600;
      }
  .pat-service h5>span{
    color:var(--g-main);
  }
  
  @media (min-width:992px){
    .services-wrapper .slick-slider{
      -webkit-touch-callout: text;
      -webkit-user-select: text;
      -khtml-user-select: text;
      -moz-user-select: text;
      -ms-user-select: text;
      user-select: text;
    }
  }
  
  #shopify-section-service-essentials-sub .section-title-1{
    line-height: 1.5;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }
  
  #shopify-section-service-essentials-sub .section-des-1{
  	max-width:1000px;
  }
  
  #shopify-section-service-essentials-sub .slick-dots li button{
    border: 1px solid #cfcfcf;
  }
  
  #shopify-section-service-essentials-sub .section-block{
    background-color:transparent;
  }

  #shopify-section-service-essentials-sub{
    background-color:var(--g-main);
  }
  
  #shopify-section-service-essentials-sub .media-body,
  #shopify-section-service-essentials-sub h5,
  #shopify-section-service-essentials-sub .section-title,
  #shopify-section-service-essentials-sub .section-des{
  	color:white;
  }

  #shopify-section-service-essentials-sub .service-2{
    padding:0;
  }
  
  #shopify-section-service-essentials-sub #Icon_1 .st0{fill:none;stroke:#fff;stroke-width:3;stroke-miterlimit:10;}
  #shopify-section-service-essentials-sub #Icon_1 .st1{fill:#fff}
  
  #shopify-section-service-essentials-sub #Icon_2 .st0{fill:none;stroke:#fff;stroke-width:3;stroke-miterlimit:10;}
  #shopify-section-service-essentials-sub #Icon_2 .st1{fill:#fff}

  #shopify-section-service-essentials-sub #Icon_3 .st0{fill:none;stroke:#fff;stroke-width:3;stroke-miterlimit:10;}
  #shopify-section-service-essentials-sub #Icon_3 .st1{display:none;}
  #shopify-section-service-essentials-sub #Icon_3 .st2{display:inline;}
  #shopify-section-service-essentials-sub #Icon_3 .st3{fill:#fff}

  #shopify-section-service-essentials-sub #Icon_4 .st0{fill:none;stroke:#fff;stroke-width:3;stroke-miterlimit:10;}
  #shopify-section-service-essentials-sub #Icon_4 .st1{fill:#fff}
  
</style>

