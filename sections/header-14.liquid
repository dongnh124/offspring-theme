          <span class="topbar-link">
            <a href="{{block.settings.link}}" title="{{block.settings.title}}">
              {{block.settings.title}}
            </a>
          </span>
          {% endfor %}
          <span class="topbar-link">
            {%- include 'block-currencies' -%}
          </span>
        </div>
      </div>
    </div>
  </div>

  <div class="header-bottom py-2 py-lg-0">
    <div class="container">
      <div class="row no-gutters row-header">
        <div class="col-12 col-sm-6 col-lg-2 d-flex align--center col-logo">
          {%- include 'site-logo' -%}
        </div>
        <div class="col-md-6 col-lg-8 d-none d-lg-block text-center col-menu">
          {%- include 'block-menu' -%}
        </div>
        <div class="col-12 col-sm-6 col-lg-2 header-bottom__right">

          <div class="d-block d-lg-none toggle-menu-mobile">
            {%- include 'button-toggle-menu-mobile' -%}
          </div>
          
          <div class="site-header__search-wrap">
            <form id="form-search-header" action="/search" method="get" class="site-header__search js-ajaxsearch" role="search">
              <input type="hidden" name="type" value="product">
              <label for="SiteNavSearch" class="visually-hidden">{{ 'general.search.placeholder' | t }}</label>
              <input onfocus="this.value=''" type="search" name="q" id="SiteNavSearch" placeholder="{{ 'general.search.placeholder' | t }}" aria-label="{{ 'general.search.placeholder' | t }}" autocomplete="off" class="site-header__search-input">
              <button type="submit" class="text-link site-header__link site-header__search-submit hide">
                {%- include 'icon-search' -%}
              </button>
              <div class="search-results"></div>
            </form>
            <button onclick="toggleClassSearch()" class="text-link site-header__link site-header__search-pop" title="{{ 'general.search.placeholder' | t}}">
              {%- include 'icon-search' -%}
            </button>
          </div>
          
          {%- include 'block-wishlist' -%}
          {%- include 'block-compare' -%}

          {%- if shop.customer_accounts_optional or shop.customer_accounts_enabled -%}
          {%- if customer -%}
          <a href="/account" data-toggle="tooltip" title="{{'customer.account.title' | t}}" data-placement="top" class="site-header__link site-account ">
            {%- include 'icon-user' -%}
            <span class="account-text">{{'customer.account.title' | t}}</span>
          </a>
          <a href="/account/logout" data-toggle="tooltip" title="{{'layout.customer.log_out' | t}}" data-placement="top" class="site-header__link site-logout ">
            {%- include 'icon-sign-out' -%}
            <span class="logout-text">{{'layout.customer.log_out' | t}}</span>
          </a>
          {%- else -%}
          {%- if template != 'customers/login' -%} {% comment DOES NOT APPEAR ON LOGIN PAGE - AVOID CONFLICT %} {% endcomment %}
          <a href="javascript:void(0)" data-toggle="modal" data-target="#jsLogin" class="site-header__link site-account js-open-login">
            <span data-toggle="tooltip" title="{{'customer.login.sign_in' | t}}" data-placement="top">{% include 'icon-user' %}</span>
            <span class="account-text">{{'customer.login.sign_in' | t}}</span>
          </a>
          {%- endif -%}
          {%- endif -%}
          {%- endif -%}
          
          <span class="site-header__link site-header__cart js-mini-cart">
            <span class="js-toggle-cart" title="{{'cart.general.title' | t}}">
              {%- include 'icon-cart' -%}
              <span class="js-cart-count site-header__cart-indicator">{{cart.item_count}}</span>
            </span>
            <div class="mini-cart-content text-center shadow">
              <div class="js-mini-cart-content"></div>

              {%- include 'free-shipping' -%}

              <div class="mini-cart-total">
                {{'cart.label.total' | t }}: <span class="js-cart-total">{{cart.total_price | money}}</span>
              </div>
              <div class="mini-cart-btns">
                <a class="btn btn-theme d-block js-cart-btn-checkout {% if cart.item_count == 0 %} disabled{% endif %}" href="/checkout">{{'cart.general.checkout' | t }}</a>
                <a class="bg-transparent border-0 btn btn-theme d-block text-theme js-cart-btn-cart" href="/cart">{{'cart.general.update' | t }}</a>
              </div>
              {%- if settings.safe_checkout_pcart != blank -%}
              <div class="mini-cart-safe-checkout">
                <img class="lazyload" data-src="{{ settings.safe_checkout_pcart | img_url: '500x' }}"/>
              </div>
              {%- endif -%}
              <div class="mini-cart-taxes">
                {{'cart.general.taxes_and_shipping_at_checkout' | t}}
              </div>
            </div>
          </span>
        </div>
      </div>
    </div>
  </div>
</header>
