{%- if section.settings.enable_tab -%}
  {%- if section.settings.accordion_tab -%}
    <div id="accordion-details">
      <div class="card">
        <div class="card-header" id="gheading1">
          <h5 class="mb-0">
            <button class="btn" data-toggle="collapse" data-target="#gcollapse1" aria-expanded="true" aria-controls="gcollapse1">
              {{section.settings.gtab_des | default:'Description'}}
            </button>
          </h5>
        </div>
        <div id="gcollapse1" class="collapse show" aria-labelledby="gheading1" data-parent="#accordion-details">
          <div class="card-body">
            {{product.description}}
          </div>
        </div>
      </div>
      
      {%- if product.metafields.info.tab1 != blank -%}
      <div class="card">
        <div class="card-header" id="sheading1">
          <h5 class="mb-0">
            <button class="btn collapsed" data-toggle="collapse" data-target="#scollapse1" aria-expanded="false" aria-controls="scollapse1">
              {{section.settings.stab_title1}}
            </button>
          </h5>
        </div>
        <div id="scollapse1" class="collapse" aria-labelledby="sheading1" data-parent="#accordion-details">
          <div class="card-body">
            {{product.metafields.info.tab1}}
          </div>
        </div>
      </div>
      {%- endif -%}
      
      {%- if product.metafields.info.tab2 != blank -%}
      <div class="card">
        <div class="card-header" id="sheading2">
          <h5 class="mb-0">
            <button class="btn collapsed" data-toggle="collapse" data-target="#scollapse2" aria-expanded="false" aria-controls="scollapse2">
              {{section.settings.stab_title2}}
            </button>
          </h5>
        </div>
        <div id="scollapse2" class="collapse" aria-labelledby="sheading2" data-parent="#accordion-details">
          <div class="card-body">
            {{product.metafields.info.tab2}}
          </div>
        </div>
      </div>
      {%- endif -%}

      {%- if product.metafields.info.tab3 != blank -%}
      <div class="card">
        <div class="card-header" id="sheading3">
          <h5 class="mb-0">
            <button class="btn collapsed" data-toggle="collapse" data-target="#scollapse3" aria-expanded="false" aria-controls="scollapse3">
              {{section.settings.stab_title3}}
            </button>
          </h5>
        </div>
        <div id="scollapse3" class="collapse" aria-labelledby="sheading3" data-parent="#accordion-details">
          <div class="card-body">
            {{product.metafields.info.tab3}}
          </div>
        </div>
      </div>
      {%- endif -%}

      {%- if product.metafields.info.tab4 != blank -%}
      <div class="card">
        <div class="card-header" id="sheading4">
          <h5 class="mb-0">
            <button class="btn collapsed" data-toggle="collapse" data-target="#scollapse4" aria-expanded="false" aria-controls="scollapse4">
              {{section.settings.stab_title4}}
            </button>
          </h5>
        </div>
        <div id="scollapse4" class="collapse" aria-labelledby="sheading4" data-parent="#accordion-details">
          <div class="card-body">
            {{product.metafields.info.tab4}}
          </div>
        </div>
      </div>
      {%- endif -%}
      
      {%- if section.settings.gtab_review_enable -%}
      <div class="card">
        <div class="card-header" id="gheading2">
          <h5 class="mb-0">
            <button class="btn collapsed" data-toggle="collapse" data-target="#gcollapse2" aria-expanded="true" aria-controls="gcollapse2">
              {{section.settings.gtab_review}}
            </button>
          </h5>
        </div>
        <div id="gcollapse2" class="collapse" aria-labelledby="gheading2" data-parent="#accordion-details">
          <div class="card-body">
            <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
          </div>
        </div>
      </div>
      {%- endif -%}
      
    </div>
  {%- else -%}
  	<div id="nav-tab-info">
    <div class="nav nav-tabs" role="tablist">
      <a class="nav-item nav-link active" href="#gtab1" data-toggle="tab" role="tab" aria-selected="true">{{section.settings.gtab_des | default:'Description'}}</a>
      {%- if product.metafields.info.tab1 != blank -%}
      <a class="nav-item nav-link" href="#stab1" data-toggle="tab" role="tab" aria-selected="false">{{section.settings.stab_title1}}</a>
      {%- endif -%}
      {%- if product.metafields.info.tab2 != blank -%}
      <a class="nav-item nav-link" href="#stab2" data-toggle="tab" role="tab" aria-selected="false">{{section.settings.stab_title2}}</a>
      {%- endif -%}
      {%- if product.metafields.info.tab3 != blank -%}
      <a class="nav-item nav-link" href="#stab3" data-toggle="tab" role="tab" aria-selected="false">{{section.settings.stab_title3}}</a>
      {%- endif -%}
      {%- if product.metafields.info.tab4 != blank -%}
      <a class="nav-item nav-link" href="#stab4" data-toggle="tab" role="tab" aria-selected="false">{{section.settings.stab_title4}}</a>
      {%- endif -%}
      {%- if section.settings.gtab_review_enable -%}
      <a class="nav-item nav-link" href="#gtab2" data-toggle="tab" role="tab" aria-selected="false">
        {{section.settings.gtab_review}}
      </a>
      {%- endif -%}
    </div>
    <div class="tab-content">
      <div class="tab-pane fade show active" id="gtab1" role="tabpanel" >
        {{product.description}}
      </div>
      {%- if product.metafields.info.tab1 != blank -%}
      <div class="tab-pane fade" id="stab1" role="tabpanel">
        {{product.metafields.info.tab1}}
      </div>
      {%- endif -%}
      {%- if product.metafields.info.tab2 != blank -%}
      <div class="tab-pane fade" id="stab2" role="tabpanel">
        {{product.metafields.info.tab2}}
      </div>
      {%- endif -%}
      {%- if product.metafields.info.tab3 != blank -%}
      <div class="tab-pane fade" id="stab3" role="tabpanel">
        {{product.metafields.info.tab3}}
      </div>
      {%- endif -%}
      {%- if product.metafields.info.tab4 != blank -%}
      <div class="tab-pane fade" id="stab4" role="tabpanel">
        {{product.metafields.info.tab4}}
      </div>
      {%- endif -%}
      {%- if section.settings.gtab_review_enable -%}
      <div class="tab-pane fade" id="gtab2" role="tabpanel">
        <div id="shopify-product-reviews" data-id="{{product.id}}">{{ product.metafields.spr.reviews }}</div>
      </div>
      {%- endif -%}
    </div>
  </div>
  {%- endif -%}
{%- endif -%}